<h1>All the Tasks</h1>
<ul>
  <%# tasks list %>
  <% @tasks.each do |task|  %>
    <div class="p-2">

    <%= task.completed ? "☑" : "☐" %>
    <%# <input type="checkbox" id="title" name="vehicle1" value="Bike"> %>
    <label for="title"> <%= link_to task.title, task_path(task), class: "" %></label>
    <%= link_to '🗑',
      task_path(task),
      # delete_task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    </div>
  <% end %>

  <%# new tasks %>
  <%= link_to '+ add a new task', new_task_path , class: "btn btn-primary"%>
</ul>
